<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Alert", sticky: false, :image => :success) %>
<% elsif flash[:notice] %>
  <%= js add_gritter(flash[:notice], title: "Notice", sticky: false, :image => :success) %>
<% else %>
  <%= js add_gritter(flash[:error], title: "Error", sticky: false, :image => :success) %>
<% end %>